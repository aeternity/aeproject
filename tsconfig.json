{
  "include": ["./src/**/*"],
  "exclude": [
    "./tests/**",
    ".eslintrc.js",
    "./src/init/artifacts/**",
    "./src/init/update-artifacts/**"
  ],
  "compilerOptions": {
    "outDir": "./build",
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020", "dom", "esnext"],
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": true
  }
}
