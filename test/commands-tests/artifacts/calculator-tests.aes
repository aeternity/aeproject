// tests
contract Calculator =
    
    public function test_sum_correct() =
        let result = 5
        require(sum(2,3) == result, "Result of sum is incorrect!")

    public function test_sum_incorrect() =
        require(sum(2,3) == 4, "Result of sum is incorrect!")

    // public function should_not_call_me() : int =
